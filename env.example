# Configuration Frontend E-commerce Gabon
# Copiez ce fichier vers .env et ajustez les valeurs selon votre environnement

# URLs de l'API (correspondent aux variables du backend)
VITE_API_URL=http://localhost:3001/api
VITE_WS_URL=http://localhost:3001
VITE_BACKEND_URL=http://localhost:3001
VITE_SOCKET_URL=http://localhost:3001

# URLs de redirection
VITE_FRONTEND_URL=http://localhost:8080
VITE_ADMIN_URL=http://localhost:8080

# Configuration de l'environnement
VITE_NODE_ENV=development
VITE_DEBUG=true

# Configuration Socket.IO
VITE_SOCKET_TIMEOUT=10000
VITE_SOCKET_RECONNECTION_ATTEMPTS=5
VITE_SOCKET_RECONNECTION_DELAY=2000

# Configuration des messages
VITE_MESSAGE_MAX_LENGTH=5000
VITE_MESSAGE_TYPING_TIMEOUT=3000
VITE_MESSAGE_LOAD_LIMIT=50

# Configuration des notifications
VITE_NOTIFICATION_MAX_VISIBLE=5
VITE_NOTIFICATION_AUTO_HIDE_DELAY=5000

# Configuration des fichiers
VITE_FILE_MAX_SIZE=10485760
VITE_FILE_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain

# Configuration de la pagination
VITE_PAGINATION_DEFAULT_LIMIT=20
VITE_PAGINATION_MAX_LIMIT=100

# Configuration du cache (en millisecondes)
VITE_CACHE_USER_DURATION=300000
VITE_CACHE_CONVERSATION_DURATION=120000
VITE_CACHE_MESSAGE_DURATION=60000

# Configuration de l'authentification
VITE_AUTH_TOKEN_KEY=authToken
VITE_AUTH_REFRESH_TOKEN_KEY=refreshToken
VITE_AUTH_TOKEN_EXPIRATION_BUFFER=300000

# Configuration des logs
VITE_LOG_LEVEL=debug
VITE_ENABLE_CONSOLE_LOG=true
VITE_ENABLE_SOCKET_LOG=true
VITE_ENABLE_API_LOG=true
